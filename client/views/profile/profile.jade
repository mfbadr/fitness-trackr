//age , gender, weight in lbs, height in inches, save button
.panel.panel-default
  .panel-heading
    h3 {{title}}
  .panel-body
    .row
      .col-xs-3
        form(role='form', name='editForm', novalidate)
          .form-group
            label(for='email') Email
            input.form-control#email(type='email', required, ng-model='user.email', autofocus)
          .form-group
            label(for='age') Age
            input.form-control#age(type='number', required, ng-model='user.age')
          .form-group
            label(for='weight') Weight in Pounds
            input.form-control#weight(type='number', required, ng-model='user.weight')
          .form-group
            label(for='height') Height in Inches
            input.form-control#height(type='number', required, ng-model='user.height')
          .form-group
            label(for='gender') Gender
            select(ng-model='user.gender', required)
              option(value='male') Male
              option(value='female') Female
        button.btn.btn-primary(ng-show='editForm.$valid', ng-click='editProfile()') Edit Profile
      .col-xs-9
        h1 Your BMR is:
        //explain bmr
        h1 {{user.bmr}} Calories per Day

